{
  "name": "research-engine",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "start": "NODE_ENV=production bun run dist/index.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "bullmq": "^5.65.1",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "pino": "^10.1.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "latest",
    "@types/express": "^5.0.6",
    "husky": "^9.1.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
