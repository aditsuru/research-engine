# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Environment mode: development, production, test
NODE_ENV=development

# Server port
PORT=3000

# Allowed CORS origins (comma-separated URLs or * for all)
CORS_ORIGIN=http://localhost:3000

# Maximum payload size for requests (e.g., 10mb, 5mb, 1kb)
MAX_PAYLOAD_SIZE=10mb

# Logging level: info, error, debug, warn
LOG_LEVEL=info

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis URL for rate limiting
REDIS_RATE_LIMITER_URL=redis://localhost:6379

# Redis URL for Socket.IO pub/sub
REDIS_SOCKET_PUB_SUB_URL=redis://localhost:6379

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================

# Guest user rate limiting (unauthenticated requests)
RATE_LIMIT_GUEST_MAX_REQUESTS=10
RATE_LIMIT_GUEST_WINDOW_SECONDS=60

# Authenticated user rate limiting
RATE_LIMIT_AUTH_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_SECONDS=60